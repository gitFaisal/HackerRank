


def designerPdfViewer(h, word):
    alphabet = ['a','b','c', 'd','e','f','g','h','i','j','k','l','m','n','o','p','q','r', 's','t','u','v','w','x','y','z']

    width = len(word)
    heights = []
    for letter in word:
        indx = alphabet.index(letter)
        letterHeight = h[indx]

        heights.append(letterHeight)
    area = max(heights) * width 
    
    return area
